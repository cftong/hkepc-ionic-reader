<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gaplotech.hkepc-ionic-reader" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HKEPC IR</name>
    <description>
        HKECP Ionic Reader project
    </description>
    <author email="gaplotech@gmail.com" href="blog.gaplotech.com">
      Gapæ’ˆTech
    </author>
    <content src="index.html" />
    <access origin="*.hkepc.com" />
    <allow-navigation href="*.hkepc.com" />
    <allow-intent href="*" />
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="xwalkVersion" value="15+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
    <!--For native transition plugin -->
    <preference name="CrosswalkAnimatable" value="true" />
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <platform name="ios">
        <icon src="resources/ios/icon/DefaultIcon.png" />
        <splash height="1136" src="resources/ios/splash/Default-568h@2x.png" width="640" />
        <splash height="1334" src="resources/ios/splash/Default-667h@2x.png" width="750" />
        <splash height="2208" src="resources/ios/splash/Default-Portrait-736h@3x.png" width="1242" />
        <splash height="1242" src="resources/ios/splash/Default-Landscape-736h@3x.png" width="2208" />
        <splash height="1536" src="resources/ios/splash/Default-Landscape@2x.png" width="2048" />
        <splash height="768" src="resources/ios/splash/Default-Landscape.png" width="1024" />
        <splash height="2048" src="resources/ios/splash/Default-Portrait@2x.png" width="1536" />
        <splash height="1024" src="resources/ios/splash/Default-Portrait.png" width="768" />
        <splash height="960" src="resources/ios/splash/Default@2x.png" width="640" />
    </platform>
    <platform name="android">
        <icon density="mdpi" src="resources/android/icon/drawable-mdpi/appicon.png" />
        <icon density="hdpi" src="resources/android/icon/drawable-hdpi/appicon.png" />
        <icon density="xhdpi" src="resources/android/icon/drawable-xhdpi/appicon.png" />
        <icon density="xxhdpi" src="resources/android/icon/drawable-xxhdpi/appicon.png" />
        <icon density="xxxhdpi" src="resources/android/icon/drawable-xxxhdpi/appicon.png" />
        <splash density="land-mdpi" src="resources/android/splash/res-long-land-mdpi/default.png" />
        <splash density="land-hdpi" src="resources/android/splash/res-long-land-hdpi/default.png" />
        <splash density="land-xhdpi" src="resources/android/splash/res-long-land-xhdpi/default.png" />
        <splash density="land-xxhdpi" src="resources/android/splash/res-long-land-xxhdpi/default.png" />
        <splash density="land-xxxhdpi" src="resources/android/splash/res-long-land-xxxhdpi/default.png" />
        <splash density="port-mdpi" src="resources/android/splash/res-long-port-mdpi/default.png" />
        <splash density="port-hdpi" src="resources/android/splash/res-long-port-hdpi/default.png" />
        <splash density="port-xhdpi" src="resources/android/splash/res-long-port-xhdpi/default.png" />
        <splash density="port-xxhdpi" src="resources/android/splash/res-long-port-xxhdpi/default.png" />
        <splash density="port-xxxhdpi" src="resources/android/splash/res-long-port-xxxhdpi/default.png" />
    </platform>
    <plugin name="cordova-plugin-inappbrowser" spec="https://git-wip-us.apache.org/repos/asf/cordova-plugin-inappbrowser.git" />
    <plugin name="com.telerik.plugins.nativepagetransitions" spec="https://github.com/Telerik-Verified-Plugins/NativePageTransitions" />
</widget>
